<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7F7"
    tools:context=".About">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="457dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle" />

    <include
        android:id="@+id/include2"
        layout="@layout/appbar"></include>


    <TextView
        android:id="@+id/nameProfile2"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:lineSpacingExtra="2sp"
        android:text="MyEyewear was established in 2016 with an unmistakable concentration to furnish better vision to millions with quality eyewear. We are planning to be a main online retailer of vision care results of the most noteworthy standard with our extensive variety of Eyeglasses, Prescription Sunglasses, Fashion Sunglasses, and Computer Eyeglasses alongside claim to fame accumulations and focal points. "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/nameProfile3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:lineSpacingExtra="2sp"
        android:text="MyEyewear exists to enhance vision clearness. We do everything remembering our clients. It is with this conviction we work each day to enable millions to enhance their vision and have better existences."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameProfile4" />

    <TextView
        android:id="@+id/nameProfile6"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:lineSpacingExtra="2sp"
        android:text="We really love to encourage individuals! Henceforth, we give a little rate to different vision establishments from each deal that occurs at MyEyewear. "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameProfile5" />

    <TextView
        android:id="@+id/nameProfile4"
        android:layout_width="219dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:lineSpacingExtra="2sp"
        android:text="BETTER VISION FOR THE WORLD"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameProfile2" />

    <TextView
        android:id="@+id/nameProfile5"
        android:layout_width="127dp"
        android:layout_height="23dp"
        android:layout_marginTop="24dp"
        android:autoText="false"
        android:lineSpacingExtra="2sp"
        android:text="WE LOVE TO HELP"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameProfile3" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="159dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logoeyewear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/berkshire_swash"
        android:text="About"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <ImageButton
        android:id="@+id/btnBack2"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/ic_back" />


</androidx.constraintlayout.widget.ConstraintLayout>